<div class="login-container">

  <!-- Left Side Image -->
  <div class="login-left"></div>

  <!-- Right Side Form -->
  <div class="login-right">
    <div class="form-box">

      <h2 class="title">Login</h2>

      <% if alert %>
        <div style="background: #fee2e2; border: 1px solid #fecaca; border-radius: 6px; padding: 12px; margin-bottom: 20px;">
          <div style="color: #991b1b; font-size: 14px; font-weight: 500;"><%= alert %></div>
        </div>
      <% end %>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

        <!-- Email -->
        <div class="input-group">
          <%= f.label :email %>
          <%= f.email_field :email, autofocus: true, class: "input" %>
        </div>

        <!-- Password -->
        <div class="input-group">
          <%= f.label :password %>
          <%= f.password_field :password, class: "input" %>
        </div>

        <!-- Submit -->
        <%= f.submit "Log In", class: "btn login-btn" %>

        <!-- Forgot Password Link -->
        <div style="text-align: center; margin-top: 15px;">
          <%= link_to "Forgot password?", forgot_password_path, style: "color: #667eea; text-decoration: none; font-size: 14px;" %>
        </div>

      <% end %>

    </div>
  </div>

</div>
