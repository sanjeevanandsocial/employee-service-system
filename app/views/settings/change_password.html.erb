<h1 class="page-title">Change Password</h1>

<% if notice %>
  <div style="background: #dcfce7; color: #166534; padding: 12px 16px; border-radius: 8px; margin-bottom: 20px; border: 1px solid #bbf7d0;">
    <%= notice %>
  </div>
<% end %>

<% if alert %>
  <div style="background: #fee2e2; color: #991b1b; padding: 12px 16px; border-radius: 8px; margin-bottom: 20px; border: 1px solid #fecaca;">
    <%= alert %>
  </div>
<% end %>

<div style="background: white;max-width: 500px;">
  
  
  <%= form_with url: settings_update_password_path, method: :patch, local: true do |form| %>
    <div style="margin-bottom: 20px;">
      <label style="display: block; font-weight: 600; color: #64748b; margin-bottom: 8px; font-size: 14px;">Current Password</label>
      <%= form.password_field :current_password, style: "width: 100%; padding: 12px; border: 1px solid #e2e8f0; border-radius: 8px; font-size: 14px;", placeholder: "Enter current password", required: true %>
    </div>
    
    <div style="margin-bottom: 20px;">
      <label style="display: block; font-weight: 600; color: #64748b; margin-bottom: 8px; font-size: 14px;">New Password</label>
      <%= form.password_field :password, style: "width: 100%; padding: 12px; border: 1px solid #e2e8f0; border-radius: 8px; font-size: 14px;", placeholder: "Enter new password", required: true, minlength: 6 %>
      <small style="color: #64748b; font-size: 12px;">Minimum 6 characters</small>
    </div>
    
    <div style="margin-bottom: 30px;">
      <label style="display: block; font-weight: 600; color: #64748b; margin-bottom: 8px; font-size: 14px;">Confirm New Password</label>
      <%= form.password_field :password_confirmation, style: "width: 100%; padding: 12px; border: 1px solid #e2e8f0; border-radius: 8px; font-size: 14px;", placeholder: "Confirm new password", required: true, minlength: 6 %>
    </div>
    
    <div style="text-align: center;">
      <%= form.submit "Update Password", class: "add-btn" %>
    </div>
  <% end %>
</div>