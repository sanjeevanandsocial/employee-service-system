<div class="form-container">
  <div class="form-card">
    <h1 class="form-title">Add New Project</h1>
    
    <% if @project.errors.any? %>
      <div class="error-messages">
        <h3><%= pluralize(@project.errors.count, "error") %> prohibited this project from being saved:</h3>
        <ul>
          <% @project.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    
    <%= form_with model: @project, url: projects_path, local: true do |f| %>
      <div class="form-row">
        <div class="form-col">
          <div class="form-group">
            <%= f.label :title, "Project Name", class: "form-label" %>
            <%= f.text_field :title, class: "form-input", placeholder: "Enter project name", id: "project_title" %>
          </div>
        </div>
        <div class="form-col">
          <div class="form-group">
            <%= f.label :status, class: "form-label" %>
            <%= f.select :status, [["Planned", "planned"]], { selected: "planned" }, class: "form-input", disabled: true %>
          </div>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :description, class: "form-label" %>
        <%= f.text_area :description, rows: 4, class: "form-input", placeholder: "Enter project description", id: "project_description" %>
      </div>

      <div class="btn-group">
        <%= f.submit "Create Project", class: "btn-primary" %>
        <%= link_to "Back", projects_path, class: "btn-secondary" %>
      </div>
    <% end %>
  </div>
</div>

<script>
  function capitalizeFirst(input) {
    input.addEventListener('input', function(e) {
      const start = this.selectionStart;
      const end = this.selectionEnd;
      if (this.value.length > 0 && start === 1) {
        this.value = this.value.charAt(0).toUpperCase() + this.value.slice(1);
        this.setSelectionRange(start, end);
      }
    });
  }
  
  capitalizeFirst(document.getElementById('project_title'));
  capitalizeFirst(document.getElementById('project_description'));
</script>
